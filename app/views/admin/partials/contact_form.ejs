<form class="form-horizontal">
  <div class="form-group form-group-lg">
    <label for="pageTitle" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="pageTitle" placeholder="Page Title">
    </div>
  </div>

  <div class="form-group">
    <label for="contactHeader" class="col-sm-2 control-label">Contact page header</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="contactHeader" placeholder="Heading of contact page">
    </div>
  </div>

  <div class="form-group">
    <label for="locationText" class="col-sm-2 control-label">Location section</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="locationText" placeholder="Location heading and text">
    </div>
  </div>

  <div class="form-group">
    <label for="numberText" class="col-sm-2 control-label">Number section</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="numberText" placeholder="Number heading and text">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn save-btn"><i class="fa fa-check fa-fw"></i>Save template</button>
    </div>
  </div>
</form>
