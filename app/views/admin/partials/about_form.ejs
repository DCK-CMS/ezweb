<form class="form-horizontal">
  <div class="form-group form-group-lg">
    <label for="pageTitle" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="pageTitle" placeholder="Page Title">
    </div>
  </div>

  <div class="form-group">
    <label for="carouselTitle" class="col-sm-2 control-label">Carousel title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="carouselTitle" placeholder="Text inside carousel">
    </div>
  </div>

  <div class="form-group">
    <label for="aboutText" class="col-sm-2 control-label">About text</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="aboutText" placeholder="Text for about section">
    </div>
  </div>

  <div class="form-group">
    <label for="imgUrl" class="col-sm-2 control-label">Img Url</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="imgUrl" placeholder="Urls for images">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn save-btn"><i class="fa fa-check fa-fw"></i>Save template</button>
    </div>
  </div>
</form>
