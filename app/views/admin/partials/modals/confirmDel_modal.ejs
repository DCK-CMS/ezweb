<!-- Confirm deletion Modal -->
<div class="modal fade" id="confirmDel-modal" tabindex="-1" role="dialog" aria-labelledby="confirmDelModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="confirmDelModalLabel">Are you sure?</h4>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer text-center">
        <a class="btn confirm-no-btn" data-dismiss="modal">No, cancel</a>
        <!-- Yes -->
        <a class="btn confirm-yes-btn" data-dismiss="modal">
          <i class="fa fa-check fa-fw"></i>Yes, I'm sure
        </a>
      </div>

    </div>
  </div>
</div>
