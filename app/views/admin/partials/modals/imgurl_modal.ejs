<!-- Image url uploader Modal -->
<div class="modal fade" id="imgUpload-modal" tabindex="-1" role="dialog" aria-labelledby="imgUploadModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="imgUploadModalLabel">Upload image</h4>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <!-- Img Url Form -->
        <form id="homeForm" action="/admin/gallery" method="post">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-list-alt fa-fw"></i></span>
              <input type="text" class="form-control" placeholder="Image name" name="name">
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-link fa-fw"></i></span>
              <input id="imgUrl" type="url" class="form-control" placeholder="Image url" name="img_url">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-link fa-fw"></i></span>
              <input type="file" id="imgPath" multiple name="img_path">

            </div>
          </div>
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <!-- Save button -->
            <button type="submit" class="btn save-btn">
              <i class="fa fa-check fa-fw"></i>Save image
            </button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>
