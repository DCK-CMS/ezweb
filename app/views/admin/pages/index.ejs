<div id="wrapper" class="toggled">

  <!-- Sidebar -->
  <% include ../partials/sidebar.ejs %>
  <!-- #sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid page-container">
      <!-- Header row -->
      <div class="row admin-header">
        <div class="col-lg-12">
          <!-- Header title -->
          <div class="header-title"><%= title %></div>
          <!-- Toggle button -->
          <a href="#menu-toggle" id="menu-toggle" class="btn header-btn">Toggle Sidebar</a>
          <!-- New page button -->
          <a href="/admin/pages/new" class="btn header-btn"><i class="fa fa-plus fa-fw"></i> New page</a>

        </div>
      </div>
    
      <!-- Content body row -->
      <div class="row pages-contentbody-container">
        <div class="col-lg-12">
          <!-- Confirm deletion Modal -->
          <% include ../partials/modals/confirmDel_modal.ejs %>
          
          <div class="new-pages-row">
            (Page title here) /admin/pages/(pageId)/edit
            <!-- delete button -->
            <a class="btn del-btn" data-toggle="modal" data-target="#confirmDel-modal">
              <i class="fa fa-trash-o fa-fw"></i>
              Delete
            </a>
            <!-- href link to edit page -->
            <a href="/admin/pages/:pageid/edit" class="btn edit-btn">
              <i class="fa fa-pencil-square-o fa-fw"></i>
              Edit
            </a>

          </div>
          <div class="new-pages-row">
            (Page title here)
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
<!-- /#wrapper -->
