<div id="wrapper" class="toggled">

  <!-- Sidebar -->
  <% include ../partials/sidebar.ejs %>
  <!-- #sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid page-container">
      <!-- Header row -->
      <div class="row admin-header">
        <div class="col-lg-12">
          <!-- Header title -->
          <div class="header-title"><%= title %></div>
          <!-- Toggle button -->
          <a href="#menu-toggle" id="menu-toggle" class="btn header-btn">Toggle Sidebar</a>

          <div class="clearfix"></div>
          <!-- Navbar to select templates -->
          <nav class="template-tabs">
            <ul class="nav nav-tabs">
              <li class="active">
                <a data-toggle="tab" href="#home-templates">Home</a>
              </li>
              <li>
                <a data-toggle="tab" href="#about-templates">About</a>
              </li>
              <li>
                <a data-toggle="tab" href="#contact-templates">Contact</a>
              </li>
              <li>
                <a data-toggle="tab" href="#header-templates">Header</a>
              </li>
              <li>
                <a data-toggle="tab" href="#footer-templates">Footer</a>
              </li>
            </ul>
          </nav>

        </div>
      </div>

      <!-- Content body row -->
      <div class="row new-pages-container">
        <div class="col-lg-12">
          <!-- Container for each tabs -->
          <div class="tab-content">
            <div id="home-templates" class="tab-pane fade in active">
              <!-- Home template form -->
              <% include ../partials/home_form.ejs %>
            </div>
            <div id="about-templates" class="tab-pane fade">
              <!-- About template form -->
              <% include ../partials/about_form.ejs %>
            </div>
            <div id="contact-templates" class="tab-pane fade">
              <% include ../partials/contact_form.ejs %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
<!-- /#wrapper -->
